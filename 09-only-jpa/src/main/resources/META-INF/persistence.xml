<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="sample">
        <properties>
            <!--Klasa sterownika do bazy danych-->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <!-- Definicja połączenia do bazy: host:port/nazwa_bazy -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hibernate_arp"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <!-- Klasa pozwalająca na generowanie optymalnych zapytań pod konkretną bazę, hibernate potrafi sam ją dobrać na podstawie info w połączeniu do bazy -->
            <!-- Jeśli chcemy mieć logowane również wartości parametrów to tą konfiguracje trzeba wyłączyć -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.drop-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.scripts.action" value="create"/>
            <property name="jakarta.persistence.schema-generation.scripts.create-target" value="generated-schema.sql"/>
        </properties>
    </persistence-unit>
</persistence>